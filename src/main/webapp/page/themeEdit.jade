	head
		meta(charset="UTF-8")
		title 主题编辑页
		+extraStyle("../css/bootstrap/bootstrap.3.3.5.min.css")
		+extraStyle("../css/common_151030.css")
		style(type="text/css").
			.theme-preview-zone {
				width: 320px;
				padding: 15px 0;
			}
			.recommend-banner {
				width: 100px;
				height: 100px;
				background-color: #3d4d0f;
			}
			.recommend-container {
				margin: 5px; 
			}
			.special-banner {
				width: 320px;
				height: 100px;
				background-color: #3d4d0f;
			}
			.special-description {
				padding: 10px 15px;
				text-indent: 2em;
				color: #231815;
				font-size: 14px;
			}
			.special-value {
				height: 34px;
				line-height: 34px;
