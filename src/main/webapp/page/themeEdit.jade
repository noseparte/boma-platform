		body
			header.ui-page-header
				.mini-title 主题详情
			section.ui-flex-between
				article.theme-edit-container.flex-grow.form-horizontal.panel.panel-default
					.panel-heading 主题编辑
					.panel-body
						.form-group
							label.col-sm-1.control-label 关联专题
							.col-sm-11.pl0.special-value
								a(href="#") 专题名称
						.form-group
							label.col-sm-1.control-label 年级
							.col-sm-11.pl0.special-value 一年级、二年级、三年级
						.form-group
							label.col-sm-1.control-label 学科
							.col-sm-11.pl0.special-value 数学、物理、化学
						.form-group
							label.col-sm-1.control-label 知识点
							.col-sm-11.pl0.special-value 函数、三角函数、直线
						.form-group
							label.col-sm-1.control-label 主题名称
							.col-sm-11.pl0
								input.theme-name.form-control(type="text", maxlength="15", placeholder="请填写主题名称，最长15个字")
						.form-group
							label.col-sm-1.control-label 主题形式
							.col-sm-11.pl0
								label.radio-inline
									input(type="radio", name="theme-type", value="0")
									专题
								label.radio-inline
									input(type="radio", name="theme-type", value="0")
									专题+推荐为
						.recommend-edit-container(style="display:none")
							- var n = 1
							while n < 4
								.recommend-item
									.form-group
										label.col-sm-1.control-label 推荐位#{n++}
										.form-inline.col-sm-11.pl0
											select.form-control.recommend-type
												option(value="") 请选择
												option(value="2") 习题集
												option(value="3") 教师
											select.form-control.recommend-info.ml10
												option(value="") 请选择要推荐的老师
												option(value="xxx") 13535922700
												option(value="xxx") 13311069141
									.form-group
										label.col-sm-1.control-label 背景图片
										.col-sm-11.pl0
											img.recommend-banner(title="点击上传图片")
						button.btn.btn-primary.pull-right 保存
				aside.theme-preview-container.panel.panel-default.ml10
					.panel-heading 主题预览
					.panel-body.theme-preview-zone
						img.special-banner
						.recommend-container.ui-flex-between
							img.recommend-banner
							img.recommend-banner
							img.recommend-banner
						.special-description.
